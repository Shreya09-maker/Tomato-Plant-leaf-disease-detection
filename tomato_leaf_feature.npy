# generate_feature_from_dataset.py
from PIL import Image
import numpy as np
from tensorflow.keras.applications import MobileNetV2
from tensorflow.keras.applications.mobilenet_v2 import preprocess_input
from tensorflow.keras.preprocessing.image import img_to_array
import os

# ------------------ Dataset path ------------------
DATASET_FOLDER = "PlantVillage/Tomato"  # Replace with your dataset path

# ------------------ Collect image paths ------------------
list_of_images = []
for root, dirs, files in os.walk(DATASET_FOLDER):
    for file in files:
        if file.lower().endswith(('.jpg', '.jpeg', '.png')):
            list_of_images.append(os.path.join(root, file))

if len(list_of_images) == 0:
    raise ValueError(f"No images found in {DATASET_FOLDER}")

print(f"Found {len(list_of_images)} images in dataset.")

# ------------------ Load MobileNetV2 ------------------
leaf_detector = MobileNetV2(weights='imagenet', include_top=False, pooling='avg')

# ------------------ Extract features ------------------
features_list = []
for image_path in list_of_images:
    img = Image.open(image_path).convert('RGB').resize((224,224))
    x = img_to_array(img)
    x = np.expand_dims(x, axis=0)
    x = preprocess_input(x)
    features_list.append(leaf_detector.predict(x)[0])

# ------------------ Average features ------------------
tomato_leaf_feature = np.mean(features_list, axis=0)

# ------------------ Save feature ------------------
np.save("tomato_leaf_feature.npy", tomato_leaf_feature, allow_pickle=True)
print("âœ… 'tomato_leaf_feature.npy' has been created in the current folder.")
